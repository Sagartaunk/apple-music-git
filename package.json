{
  "name": "apple-music-electron",
  "productName": "Apple Music",
  "version": "1.0.0",
  "description": "Production-ready Apple Music client for Linux with Widevine DRM",
  "main": ".webpack/main",
  "author": "Sagartaunk",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint --ext .ts .",
    "build": "electron-forge make",
    "clean": "node -e \"require('fs').rmSync('out', {recursive: true, force: true}); require('fs').rmSync('.webpack', {recursive: true, force: true});\""
  },
  "keywords": [
    "apple-music",
    "electron",
    "linux",
    "widevine",
    "music-player"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-webpack": "^7.5.0",
    "@electron/packager": "^18.3.5",
    "@reforged/maker-appimage": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^7.1.2",
    "electron": "^32.2.5",
    "eslint": "^8.57.1",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "node-loader": "^2.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0"
  },
  "config": {
    "forge": "./.forge.config.js"
  }
}
